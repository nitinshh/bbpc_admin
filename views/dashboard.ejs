              <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>

              
              <script>
                document.addEventListener("DOMContentLoaded", function () {
                  // Ensure ApexCharts is loaded
                  if (typeof ApexCharts === "undefined") {
                    console.error("ApexCharts is not loaded. Please check the script source.");
                    return;
                  }
              
                  let charts = {};
              
                  function createChartConfig(name, data, color) {
                    return {
                      chart: {
                        height: 250,
                        width: "100%",
                        type: "area",
                        animations: { easing: "easeout", speed: 800 },
                        toolbar: { show: false },
                        background: "transparent",
                      },
                      series: [{ name: name, data: data.values || [] }],
                      colors: [color],
                      xaxis: {
                        categories: data.months || [],
                        labels: { style: { colors: "#fff", fontSize: "12px" } },
                      },
                      yaxis: {
                        labels: { style: { colors: "#fff", fontSize: "12px" } },
                      },
                      stroke: {
                        width: 3,
                        curve: "smooth",
                      },
                      fill: {
                        type: "gradient",
                        gradient: {
                          shadeIntensity: 1,
                          opacityFrom: 0.6,
                          opacityTo: 0.2,
                          stops: [0, 90, 100],
                        },
                      },
                      dataLabels: { enabled: false },
                      tooltip: { theme: "dark" },
                    };
                  }
              
                  function fetchChartData(chartType, year) {
                    fetch(`/admin/getDashboardData?year=${year}&chartType=${chartType}`)
                      .then((response) => response.json())
                      .then((data) => {
                        if (data.success) {
                          // Call updateChart with the chartType, the data for 'allUsers', and the months.
                          updateChart(chartType, data.counts.allUsers, data.months);
                        } else {
                          console.error("Error fetching data:", data.error);
                        }
                      })
                      .catch((error) => console.error("Fetch error:", error));
                  }
              
                  function updateChart(chartType, values, months) {
                    const chartId = `#${chartType}Chart`;
              
                    if (charts[chartId]) {
                      // Update the chart with new series data and categories.
                      charts[chartId].updateSeries([{ data: values }]);
                      charts[chartId].updateOptions({
                        xaxis: {
                          categories: months
                        }
                      });
                    }
                  }
              
                  try {
                    const countsData = JSON.parse('<%- JSON.stringify(counts1 || {}) %>');
                    const monthsData = JSON.parse('<%- JSON.stringify(months1 || []) %>').map(
                      (month) => month.split(",")[0]
                    );
              
                    const chartConfigs = [
                      { id: "#usersChart", name: "Users", color: "#1E90FF", type: "allUsers" },
                    ];
              
                    chartConfigs.forEach((config) => {
                      if (document.querySelector(config.id)) {
                        let chartData = { months: monthsData, values: countsData[config.type] || [] };
                        let options = createChartConfig(config.name, chartData, config.color);
                        charts[config.id] = new ApexCharts(document.querySelector(config.id), options);
                        charts[config.id].render();
                      } else {
                        console.warn(`Chart container ${config.id} not found.`);
                      }
                    });
              
                    // Initialize year dropdown events
                    document.querySelectorAll(".year-select").forEach((select) => {
                      const chartType = select.dataset.chart;
                      select.addEventListener("change", function () {
                        fetchChartData(chartType, this.value);
                      });
                    });
                  } catch (error) {
                    console.error("Error parsing JSON data:", error);
                  }
                });
              </script>


