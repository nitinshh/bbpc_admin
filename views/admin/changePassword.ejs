
  <!-- BEGIN: Head-->
  <%-include('../common/header')%>

  <style>
    .change_password label.error {
      color: red;
      font-size: 13px;
      position: absolute;
      bottom: -17px;
    }
  </style>
  <!-- BEGIN: Body-->

  <body
    class="vertical-layout vertical-menu-modern navbar-floating footer-static"
    data-open="click"
    data-menu="vertical-menu-modern"
    data-col=""
  >
    <!-- BEGIN: Content-->
    <%-include('../common/sidebar')%> <%-include('../common/navbar')%>

    <div class="app-content content">
      <div class="content-overlay"></div>
      <div class="header-navbar-shadow"></div>
      <div class="content-wrapper">
        <div class="content-header row"></div>
        <div class="content-body">
          <div class="row justify-content-center">
            <div class="col-md-12">
              <div class="auth-wrapper auth-v1 px-2">
                <div class="auth-inner py-2">
                  <!-- Reset Password -->
                  <div class="card mb-0">
                    <div class="card-body change_password">
                      <!-- Flash Messages -->
                      <% if (msg.error) { %>
                      <div
                        class="alert alert-danger alert-dismissible fade show"
                        role="alert"
                      >
                        <%= msg.error %>
                        <button
                          type="button"
                          class="btn-close"
                          data-bs-dismiss="alert"
                          aria-label="Close"
                        ></button>
                      </div>
                      <% } %> <% if (msg.msg) { %>
                      <div
                        class="alert alert-success alert-dismissible fade show"
                        role="alert"
                      >
                        <%= msg.msg %>
                        <button
                          type="button"
                          class="btn-close"
                          data-bs-dismiss="alert"
                          aria-label="Close"
                        ></button>
                      </div>
                      <% } %>

                      <div class="row align-items-center">
                        <div class="col-md-6">
                          <img
                            src="/app-assets/images/changePassword.jpg"
                            class="img-fluid"
                            alt=""
                          />
                        </div>
                        <div class="col-md-6">
                          <h4 class="card-title mb-1 mt-4">
                            Reset Password ðŸ”’
                          </h4>

                          <form
                            id="reset_password_form"
                            class="auth-reset-password-form mt-2"
                            action="/admin/change_password_post"
                            method="POST"
                          >
                            <!-- Old Password -->
                            <div class="mb-2">
                              <label class="form-label" for="password"
                                >Old Password</label
                              >
                              <div class="input-group input-group-merge">
                                <input
                                  type="password"
                                  class="form-control"
                                  id="password"
                                  name="password"
                                  tabindex="1"
                                  autofocus
                                />
                                <span
                                  class="input-group-text cursor-pointer toggle-password"
                                >
                                  <i data-feather="eye"></i>
                                </span>
                              </div>
                            </div>

                            <!-- New Password -->
                            <div class="mb-2">
                              <label class="form-label" for="new_password"
                                >New Password</label
                              >
                              <div class="input-group input-group-merge">
                                <input
                                  type="password"
                                  class="form-control"
                                  id="new_password"
                                  name="new_password"
                                  tabindex="2"
                                />
                                <span
                                  class="input-group-text cursor-pointer toggle-password"
                                >
                                  <i data-feather="eye"></i>
                                </span>
                              </div>
                            </div>

                            <!-- Confirm New Password -->
                            <div class="mb-2">
                              <label
                                class="form-label"
                                for="confirm_new_password"
                                >Confirm New Password</label
                              >
                              <div class="input-group input-group-merge">
                                <input
                                  type="password"
                                  class="form-control"
                                  id="confirm_new_password"
                                  name="confirm_new_password"
                                  tabindex="3"
                                />
                                <span
                                  class="input-group-text cursor-pointer toggle-password"
                                >
                                  <i data-feather="eye"></i>
                                </span>
                              </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="col-md-7 mx-auto mt-4">
                              <button
                                class="btn btn-primary w-100"
                                tabindex="4"
                              >
                                Submit
                              </button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- /Reset Password -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%-include('../common/script')%>

    <!-- Feather Icons -->
    <script>
      $(window).on("load", function () {
        if (feather) {
          feather.replace({ width: 14, height: 14 });
        }
      });
    </script>

    <!-- jQuery Validate -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.20.0/jquery.validate.min.js"
      integrity="sha512-WMEKGZ7L5LWgaPeJtw9MBM4i5w5OSBlSjTjCtSnvFJGSVD26gE5+Td12qN5pvWXhuWaWcVwF++F7aqu9cvqP0A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>

    <!-- Form Validation -->
    <!-- SweetAlert2 for better popups -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- CSS to remove the default browser eye icon -->
    <style>
      input[type="password"]::-ms-reveal,
      input[type="password"]::-ms-clear {
        display: none;
      }
    </style>

    <script>
      $(document).ready(function () {
        $("#reset_password_form").validate({
          rules: {
            password: {
              required: true,
              minlength: 6,
            },
            new_password: {
              required: true,
              minlength: 6,
            },
            confirm_new_password: {
              required: true,
              equalTo: "#new_password",
            },
          },
          messages: {
            password: {
              required: "Please enter your old password",
              minlength: "Your old password must be at least 6 characters long",
            },
            new_password: {
              required: "Please enter a new password",
              minlength: "Your new password must be at least 6 characters long",
            },
            confirm_new_password: {
              required: "Please confirm your new password",
              equalTo: "Passwords do not match",
            },
          },
          submitHandler: function (form, event) {
            event.preventDefault(); // Prevent normal form submission

            $.ajax({
              url: "/admin/change_password_post",
              type: "POST",
              data: $(form).serialize(),
              success: function (response) {
                if (response.success) {
                  Swal.fire({
                    icon: "success",
                    title: "Success!",
                    text:
                      response.message + " You will be redirected to login.",
                    timer: 2500,
                    showConfirmButton: false,
                    didClose: () => {
                      window.location.href = "/admin/login"; // Redirect to login page
                    },
                  });
                }
              },
              error: function (xhr) {
                let errorMsg =
                  xhr.responseJSON?.error || "Something went wrong!";
                Swal.fire({
                  icon: "error",
                  title: "Oops...",
                  text: errorMsg,
                });
              },
            });
          },
        });

        // Toggle Password Visibility
        $(".toggle-password").click(function () {
          let input = $(this).closest(".input-group").find("input");
          let icon = $(this).find("i");

          input.attr(
            "type",
            input.attr("type") === "password" ? "text" : "password"
          );

          // Toggle icon appearance
          icon.attr(
            "data-feather",
            input.attr("type") === "password" ? "eye" : "eye-off"
          );

          // Refresh Feather Icons
          feather.replace();
        });
      });
    </script>
  </body>
  <!-- END: Body-->
