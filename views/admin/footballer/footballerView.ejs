
  <!-- BEGIN: Head-->

  <%-include('../../common/header')%>
  <!-- BEGIN: Body-->

  <body
    class="vertical-layout vertical-menu-modern navbar-floating footer-static"
    data-open="click"
    data-menu="vertical-menu-modern"
    data-col=""
  >
    <!-- sidebar -->
    <%-include('../../common/sidebar')%>
    <!-- navbar -->

    <%-include('../../common/navbar')%>
    <!-- BEGIN: Content-->
    <div class="app-content content">
      <div class="content-overlay"></div>
      <div class="header-navbar-shadow"></div>
      <div class="content-wrapper">
        <div class="content-header row"></div>

        <div class="content-body">
          <div class="row justify-content-center">
            <div class="content-header-left col-md-12 col-12 mb-2">
              <div class="auth-wrapper auth-v1 px-2">
                <div class="auth-inner py-2">
                  <div class="card mb-0">
                    <div class="card-body">
                      <a href="/admin/footballer_listing" class="btn btn-primary">
                        <i class="ph ph-arrow-fat-lines-left" style="font-size: 20px"></i>
                      </a>
                      <div class="brand-logo">
                        <div
                        style="
                          display: flex;
                          justify-content: center;
                          align-items: center;
                        "
                      >
                        <% if(!data.profilePicture) { %>
                        <img
                          src="../../assets/images (1).jpeg"
                          class="profile_img"
                          alt="avatar"
                          height="120px"
                          width="150px"
                          style="align-items: center"
                        />
                        <% } else { %>
                        <img
                          src="<%= data.profilePicture %>"
                          class="profile_img"
                          alt="user image"
                          height="120px"
                          width="150px"
                        />
                        <% } %>
                      </div>
                    </div>
                    <form class="auth-register-form mt-2">
                      <!-- Name and Gender in one row -->
                      <div class="mb-1 row">
                        <div class="col-md-6">
                          <label for="name" class="form-label">Name</label>
                          <input
                            type="text"
                            class="form-control"
                            id="name"
                            name="name"
                            value="<%= data.name ? data.name : 'N/A' %>"
                            disabled
                          />
                        </div>
                        <div class="col-md-6">
                          <label for="gender" class="form-label">Gender</label>
                          <input
                            type="text"
                            class="form-control"
                            id="gender"
                            name="gender"
                            value="<%= data.gender ? (data.gender==1 ? 'Male' : 'Female') : 'N/A' %>"
                            disabled
                          />
                        </div>
                      </div>
  
                      <!-- Phone and Email in another row -->
                      <div class="mb-1 row">
                        <div class="col-md-6">
                          <label for="phone_number" class="form-label"
                            >Phone</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="phone_number"
                            name="phone_number"
                            value="<%= data.countryCode ? data.countryCode + ' ' : '' %><%= data.phoneNumber ? data.phoneNumber : 'N/A' %>"
                            disabled
                          />
                        </div>
                        <div class="col-md-6">
                          <label for="email" class="form-label">Email</label>
                          <input
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            value="<%= data.email ? data.email : 'N/A' %>"
                            disabled
                          />
                        </div>
                      </div>
  
                      <!-- Age and Height in another row -->
                      <div class="mb-1 row">
                        <div class="col-md-6">
                          <label for="age" class="form-label">Age</label>
                          <input
                            type="number"
                            class="form-control"
                            id="age"
                            name="age"
                            value="<%= data.age ? data.age : 'N/A' %>"
                            disabled
                          />
                        </div>
                        <div class="col-md-6">
                          <label for="height" class="form-label">Height</label>
                          <input
                            type="text"
                            class="form-control"
                            id="height"
                            name="height"
                            value="<%= data.height ? data.height : 'N/A' %>"
                            disabled
                          />
                        </div>
                      </div>
  
                      <!-- Weight with Unit toggle in another row -->
                      <div class="mb-1 row">
                        <div class="col-md-6">
                          <label for="age" class="form-label">Injuries</label>
                          <input
                            type="string"
                            class="form-control"
                            id="injuries"
                            name="injuries"
                            value="<%= data.injuries ? data.injuries : 'N/A' %>"
                            disabled
                          />
                        </div>
                        <div class="col-md-6">
                          <label for="weight" class="form-label">Weight</label>
                          <div class="input-group">
                            <input
                              type="number"
                              class="form-control"
                              id="weight_value"
                              name="weight_value"
                              value="<%= data.weight ? data.weight : 'N/A' %>"
                              disabled
                              style="width: 60%"
                            />
                            <div class="input-group-append">
                              <button
                                type="button"
                                class="btn btn-primary"
                                id="kg_btn"
                                onclick="toggleWeightUnit('kg')"
                              >
                                kg
                              </button>
                              <button
                                type="button"
                                class="btn btn-secondary"
                                id="lbs_btn"
                                onclick="toggleWeightUnit('lbs')"
                              >
                                lbs
                              </button>
                            </div>
                          </div>
                          <input type="hidden" id="weight_unit" value="kg" />
                        </div>
                      </div>

                      <div class="mb-1 row">
                        <div class="col-md-6">
                          <label for="name" class="form-label">Joining Date</label>
                          <input
                            type="text"
                            class="form-control"
                            id="createdAt"
                            name="createdAt"
                            value="<%= data.createdAt ? new Date(data.createdAt).toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric' }).replace(',', '') : 'N/A' %>"
                            disabled
                          />
                        </div>
                      </div>
                    </form>
                    <br /><br />
                  </div>
                </div>
                <!-- /Register v1 -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END: Content-->
  
  <%-include('../../common/script')%>
  
  <script>
    // Set default unit to kg on page load
    document.addEventListener("DOMContentLoaded", function () {
      const weightUnit = document.getElementById("weight_unit").value;
      if (weightUnit === "kg") {
        document.getElementById("kg_btn").classList.add("btn-primary");
        document.getElementById("lbs_btn").classList.add("btn-secondary");
      } else if (weightUnit === "lbs") {
        document.getElementById("lbs_btn").classList.add("btn-primary");
        document.getElementById("kg_btn").classList.add("btn-secondary");
      }
    });

    // Function to handle the toggle and conversion
    function toggleWeightUnit(unit) {
  const weightValueInput = document.getElementById("weight_value");
  const weightUnitInput = document.getElementById("weight_unit");
  const kgBtn = document.getElementById("kg_btn");
  const lbsBtn = document.getElementById("lbs_btn");

  let currentUnit = weightUnitInput.value;
  let weight = parseFloat(weightValueInput.value);

  // Convert only if the unit is actually changing
  if (unit !== currentUnit) {
    if (unit === "lbs") {
      weight = (weight * 2.20462).toFixed(2); // kg to lbs
    } else if (unit === "kg") {
      weight = (weight / 2.20462).toFixed(2); // lbs to kg
    }
    weightValueInput.value = weight;
    weightUnitInput.value = unit;
  }

  // Update button styles
  if (unit === "kg") {
    kgBtn.classList.add("btn-primary");
    kgBtn.classList.remove("btn-secondary");
    lbsBtn.classList.add("btn-secondary");
    lbsBtn.classList.remove("btn-primary");
  } else if (unit === "lbs") {
    lbsBtn.classList.add("btn-primary");
    lbsBtn.classList.remove("btn-secondary");
    kgBtn.classList.add("btn-secondary");
    kgBtn.classList.remove("btn-primary");
  }
}

  </script>
  </body>
  <!-- END: Body-->
